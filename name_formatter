import os
def name_formater(f_name, l_name):
   if f_name == "" or l_name =="":
       return ("You have provided an invalid input")
   name = f_name +" "+ l_name
   name = name.title()
   return name

while True:
    f_name = input("Please enter your first name:- ").lower()
    l_name = input("Please enter your last name:- ").lower()

    print(f"OUTPUT:- {name_formater(f_name, l_name)}")
    go_again = input("Do you wish to continue, 'yes'/'no':- ").lower()
    if go_again == "no":
        break
    else:
        os.system('CLS')
